  },
  "devDependencies": {
    "6to5ify": "^4.1.1",
    "babel": "5.1.10",
    "browserify": "^8.1.3",
    "browserify-shim": "~3.8.2",
    "envify": "^3.0.0",
    "uglify-js": "~2.4.15",
    "watchify": "^3.1"
  },
  "scripts": {
    "start": "watchify -o ../server/webmanagement/EsgrimaClient.js -v -d . ../examples ../common",
    "build": "NODE_ENV=production ./node_modules/browserify/bin/cmd.js . ../examples ../common -t 6to5ify --full-path=false | uglifyjs -cm > esgrimajsClient.min.js",
    "test": "jest"
  },
  "browserify": {
    "debug": true,
    "transform": [
      "6to5ify",
      "browserify-shim",
      "envify"

    ]
  },
  "browserify-shim": {
    "bootstrap": {
      "depends": [
        "jquery:$"
      ]
    }
  },


